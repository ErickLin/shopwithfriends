<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".WelcomeScreen">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/welcome_button_width"
        android:layout_height="wrap_content"
        android:text="@string/welcome_login"
        android:textSize="@dimen/welcome_button_text_size"
        android:id="@+id/button"
        android:onClick="logIn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/welcome_button_width"
        android:layout_height="wrap_content"
        android:text="@string/welcome_register"
        android:textSize="@dimen/welcome_button_text_size"
        android:id="@+id/button2"
        android:onClick="register" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/welcome_button_width"
        android:layout_height="wrap_content"
        android:text="Delete users"
        android:textSize="@dimen/welcome_button_text_size"
        android:id="@+id/button3"
        android:onClick="deleteUsers" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/welcome_button_width"
        android:layout_height="wrap_content"
        android:text="Reset database"
        android:textSize="@dimen/welcome_button_text_size"
        android:onClick="resetDatabase" />

</LinearLayout>
