<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".DisplayFriendActivity">
    <TextView
        android:id="@+id/display_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/display_friend_text_size" />
    <TextView
        android:id="@+id/display_friend_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/display_friend_text_size"/>
    <TextView
        android:id="@+id/display_friend_number_sales_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/display_friend_text_size" />
    <TextView
        android:id="@+id/display_friend_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/display_friend_text_size" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/display_friend_button_1"
            android:layout_width="@dimen/display_friend_rating_button_size"
            android:layout_height="wrap_content"
            android:onClick="rate1"
            android:text="@string/display_friend_1" />
        <Button
            android:id="@+id/display_friend_button_2"
            android:layout_width="@dimen/display_friend_rating_button_size"
            android:layout_height="wrap_content"
            android:onClick="rate2"
            android:text="@string/display_friend_2" />
        <Button
            android:id="@+id/display_friend_button_3"
            android:layout_width="@dimen/display_friend_rating_button_size"
            android:layout_height="wrap_content"
            android:onClick="rate3"
            android:text="@string/display_friend_3" />
        <Button
            android:id="@+id/display_friend_button_4"
            android:layout_width="@dimen/display_friend_rating_button_size"
            android:layout_height="wrap_content"
            android:onClick="rate4"
            android:text="@string/display_friend_4" />
        <Button
            android:id="@+id/display_friend_button_5"
            android:layout_width="@dimen/display_friend_rating_button_size"
            android:layout_height="wrap_content"
            android:onClick="rate5"
            android:text="@string/display_friend_5" />
        </LinearLayout>

</LinearLayout>
